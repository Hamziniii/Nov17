class Point(object):
    def __init__(self, x=0, y=0):
        self.x = x
        self.y = y

    def __str__(self):
        return 'the x value is: %.d and the y value is: %.d' % (self.x, self.y)

    def increment_by(self, a=0, b=0):
        self.x += a
        self.y += b

point = Point(1, 1)
point.increment_by(2, 4)
print(point)
